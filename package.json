{
  "name": "@hmcts/dg-docassembly-webcomponent",
  "version": "1.0.8",
  "scripts": {
    "start": "node api/proxy.js",
    "start:dev": "ng serve",
    "build": "ng build",
    "copy:license": "cp LICENSE dist/dg-docassembly-webcomponent",
    "copy:readme": "cp README.md dist/dg-docassembly-webcomponent",
    "copy:assets": "rsync -r projects/dg-docassembly-webcomponent/node_modules/@hmcts/document-viewer-webcomponent/assets dist/dg-docassembly-webcomponent",
    "copy:files": "npm run copy:license && npm run copy:readme && npm run copy:assets",
    "install-lib-dependencies": "cd projects/dg-docassembly-webcomponent && npm install",
    "build:lib": "npm install && npm run install-lib-dependencies && cd projects/dg-docassembly-webcomponent && ng build",
    "npm-pack": "cd dist/dg-docassembly-webcomponent && npm pack",
    "package": "npm run build:lib && npm run copy:files && npm run npm-pack",
    "build:demo": "ng build dg-docassembly-demo",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "test:coveralls-upload": "cat ./reports/tests/coverage/ng/lcov.info | coveralls",
    "test:codecov-upload": "codecov -f ./reports/tests/coverage/ng/lcov.info",
    "start:stubs": "node stubs/backend-stubs.js"
  },
  "dependencies": {
    "@angular/animations": "~7.1.0",
    "@angular/common": "~7.1.0",
    "@angular/compiler": "~7.1.0",
    "@angular/core": "~7.1.0",
    "@angular/forms": "^7.1.4",
    "@angular/platform-browser": "^7.2.7",
    "@angular/platform-browser-dynamic": "^7.2.7",
    "@angular/router": "~7.1.0",
    "core-js": "^2.6.12",
    "http-proxy": "^1.17.0",
    "node-fetch": "^2.3.0",
    "otp": "^0.1.3",
    "rxjs": "~6.3.3",
    "tslib": "^1.9.0",
    "url": "^0.11.0",
    "zone.js": "~0.8.26"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^0.13.2",
    "@angular-devkit/build-ng-packagr": "~0.10.0",
    "@angular/cli": "~7.0.3",
    "@angular/compiler-cli": "^7.2.6",
    "@angular/language-service": "~7.0.0",
    "@angular/platform-browser": "^7.2.7",
    "@ng-toolkit/universal": "^1.1.45",
    "@types/jasmine": "~2.8.8",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "~8.9.4",
    "atob": "^2.1.2",
    "body-parser": "^1.18.3",
    "btoa": "^1.2.1",
    "codecov": "^3.2.0",
    "codelyzer": "~4.5.0",
    "cors": "^2.8.5",
    "coveralls": "^3.0.2",
    "jasmine-core": "~2.99.1",
    "jasmine-spec-reporter": "~4.2.1",
    "karma": "^4.0.1",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage-istanbul-reporter": "~2.0.1",
    "karma-jasmine": "^2.0.1",
    "karma-jasmine-html-reporter": "^1.4.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "ng-packagr": "^4.2.0",
    "protractor": "^5.4.2",
    "ts-node": "~7.0.0",
    "tsickle": ">=0.29.0",
    "tslib": "^1.9.0",
    "tslint": "~5.11.0",
    "typescript": "~3.1.1"
  }
}
